<h2 class="text-center font-bold text-2xl mb-8">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class=> "w-4/12 mx-auto flex flex-col space-y-4"}) do |f| %>
  <div class="field flex flex-col gap-y-2">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-violet-600 rounded-md" %>
  </div>
  <div class="field flex flex-col gap-y-2">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "current-password", class: "border border-violet-600 rounded-md" %>
  </div>
  <div class="actions">
    <%= f.submit "Log in", class: "mx-auto bg-violet-600 hover:bg-violet-700 text-white py-2 px-4 rounded-lg cursor-pointer" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
