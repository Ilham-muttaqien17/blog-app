<%= form_with model: @post, url: "/posts", method: :post, class: "container mx-auto flex flex-col space-y-4" do |form| %>
  <%= form.label :title, "Title :"%>
  <%= form.text_field :title, class: "p-2 border border-violet-500 rounded-md" %>
  <%= form.label :body, "Your content :"%>
  <%= form.text_area :body, size: "60x10", class: "p-2 border border-violet-500 rounded-md" %>
  <%= form.button class: "bg-violet-600 text-white rounded-md w-[100px] ml-auto mt-10 py-2"%>
<% end %>